@model FitnessProject.Core.Models.AddSupplementFlavour_VM

@{
    ViewData["Title"] = "Add Supplement Flavour";
}

<br />

<div class="row justify-content-center">
    <div class="col-6">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Add Supplement Flavour</h3>
            </div>


            <form method="post">
                <div class="card-body">

                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input type="text" class="form-control" asp-for="Name" placeholder="Enter flavour name...">
                        <span asp-validation-for="Name"></span>
                    </div>

                    <div>
                        <label asp-for="Description">Description</label><br />
                        <textarea class="form-control" asp-for="Description" placeholder="Enter description..." style="height:100px; width:-webkit-fill-available;" spellcheck="false"></textarea>
                        <span asp-validation-for="Description"></span>
                    </div>

                </div>


                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}