@using FitnessProject.Core.Constants
@using FitnessProject.Core.Models
@model List<FlavourList_VM>

@{
    ViewData["Title"] = "All Supplement Flavours";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Data table with all supplement flavours</h3>
    </div>

    <div class="card-body">
        <div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap4">
            <div class="row"><div class="col-sm-12 col-md-6"></div><div class="col-sm-12 col-md-6"></div></div><div class="row">
                <div class="col-sm-12">
                    <table id="example2" class="table table-bordered table-hover dataTable dtr-inline" aria-describedby="example2_info">
                        <thead>
                            <tr>
                                <th class="col-5">
                                    Name
                                </th>

                                <th class="col-5">
                                    Description
                                </th>

                                <th class="col-1">
                                    Remove
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var flavour in Model)
                            {
                                <tr>
                                    <td>@flavour.Name</td>
                                    <td>@flavour.Description</td>
                                    <td class="text-center">
                                        <div class="col-6">
                                            <form asp-page-handler="Delete" method="OnGetDelete" onclick="return confirm('Are you sure you want to delete this?')">
                                                <a class="btn btn-block btn-danger btn-sm" asp-controller="SupplementFlavour" asp-action="Remove" asp-route-flavourName="@flavour.Name">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
