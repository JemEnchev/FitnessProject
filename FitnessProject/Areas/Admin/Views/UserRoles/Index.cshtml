@using FitnessProject.Core.Models
@model List<UserRoles_VM>

@{
    ViewData["Title"] = "Index";
}

<h1>User Roles</h1>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title text-center">Users</h3>
            </div>
            <div class="card-body">
                <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" aria-describedby="example1_info">
                                <thead>
                                    <tr>
                                        <th>First Name</th>
                                        <th>First Name</th>
                                        <th>Email</th>
                                        <th>Roles</th>
                                        <th class="text-center">Action</th>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td class="col-2">@user.FirstName</td>
                                            <td class="col-2">@user.LastName</td>
                                            <td class="col-3">@user.Email</td>
                                            <td class="col-2">@string.Join(" , ", user.Roles.ToList())</td>
                                            <td class="col-2 text-center">
                                                <a class="btn btn-block btn-primary btn-sm" asp-controller="UserRoles" asp-action="Manage" asp-route-userId="@user.UserId">Manage Roles</a>
                                                <a class="btn btn-block btn-danger btn-sm" asp-controller="UserRoles" asp-action="Manage" asp-route-userId="@user.UserId">Delete User</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



