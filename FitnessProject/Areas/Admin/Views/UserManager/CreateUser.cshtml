@using FitnessProject.Core.Models
@model CreateUser_VM

@{
    ViewData["Title"] = "Create User";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title text-center">Create User</h3>
                </div>
            </div>

            <form method="post" asp-area="Admin" asp-controller="UserManager" asp-action="CreateUser">
                <div class="card-body">

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <br />
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    <div class="form-group">
                        <label for="exampleInputEmail1">First name</label>
                        <input asp-for="@Model.FirstName" class="form-control" aria-required="true" placeholder="First name" />
                    </div>

                    <br />
                    <div class="form-group">
                        <label for="exampleInputEmail1">Last name</label>
                        <input asp-for="@Model.LastName" class="form-control" aria-required="true" placeholder="Last name" />
                    </div>

                    <br />
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input asp-for="@Model.Email" class="form-control" aria-required="true" placeholder="Email" />
                    </div>

                    <br />
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input asp-for="@Model.Password" class="form-control" aria-required="true" placeholder="Password" />
                    </div>
                    <br />
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a class="btn btn-primary" asp-area="Admin" asp-controller="UserManager" asp-action="Index">Cancel</a>
                </div>

            </form>
        </div>


    </div>
</div>

