@using FitnessProject.Core.Models
@model List<UserRoles_VM>

@{
    ViewData["Title"] = "Index";
}

<br />

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title text-center">Users <button type="button" class="btn btn-block btn-primary btn-sm" asp-controller="UserManager" asp-action="CreateUser" style="float: right">Add User</button></h3>
            </div>
            <div class="card-body">
                <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" aria-describedby="example1_info">
                                <thead>
                                    <tr>
                                        <th>First Name</th>
                                        <th>First Name</th>
                                        <th>Email</th>
                                        <th>Roles</th>
                                        <th class="text-center">Action</th>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td class="col-1">@user.FirstName</td>
                                            <td class="col-1">@user.LastName</td>
                                            <td class="col-3">@user.Email</td>
                                            <td class="col-3">@string.Join(" , ", user.Roles.ToList())</td>
                                            <td class="col-1 text-center">
                                                <a class="btn btn-block btn-info btn-sm" asp-controller="UserManager" asp-action="Manage" asp-route-userId="@user.UserId">Manage Roles</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<br>

<div style="text-align: -webkit-right">
<div class="col-4">
    <div class="card">

        <div class="card-header">
            <h3 class="card-title text-center">Delete User</h3>
        </div>

        <form method="post" asp-action="DeleteUser" asp-controller="UserManager">
            <div class="input-group">
                <input name="userEmail" class="form-control w-25">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </span>
            </div>
        </form>

    </div>
</div>
</div>

