@using FitnessProject.Core.Models
@model List<UserRoles_VM>

@{
    ViewData["Title"] = "Index";
}

<br />

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title text-center">Users @*<a class="btn btn-block btn-primary btn-sm" asp-controller="UserManager" asp-action="CreateUser" style="float: right">Add User</a>*@</h3>
            </div>
            <div class="card-body">
                <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" aria-describedby="example1_info">
                                <thead>
                                    <tr>
                                        <th>First Name</th>
                                        <th>First Name</th>
                                        <th>Email</th>
                                        <th>Roles</th>
                                        <th class="text-center col-1">Action</th>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td class="col-1">@user.FirstName</td>
                                            <td class="col-1">@user.LastName</td>
                                            <td class="col-3">@user.Email</td>
                                            <td class="col-3">@string.Join(" , ", user.Roles.ToList())</td>
                                            <td class="col-1 text-center">
                                                <div class="row">
                                                    <div class="col-6">
                                                        <a class="btn btn-block btn-info btn-sm" asp-controller="UserManager" asp-action="Manage" asp-route-userId="@user.UserId">
                                                            <i class="fas fa-user-edit"></i>
                                                            </a>
                                                    </div>

                                                    <div class="col-6">
                                                        <form asp-page-handler="Delete" method="OnGetDelete" onclick="return confirm('Are you sure you want to delete this?')">
                                                            <a class="btn btn-block btn-danger btn-sm" asp-controller="UserManager" asp-action="DeleteUser" asp-route-userEmail="@user.Email">
                                                                <i class="fas fa-user-times"></i>
                                                            </a>
                                                        </form>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

